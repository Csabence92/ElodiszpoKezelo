<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:windowSoftInputMode="stateAlwaysHidden">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add meg a Plant:"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/TextViewBeolvasottPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:text="Előző Plan:"
            android:textColor="#2200ff"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/TextViewElozoPlan"
            android:layout_width="wrap_content"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/nem_talalhat"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,LabelFor"
            android:visibility="visible"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/TextViewPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:text="Plan:"
            android:textColor="#000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/EditTextPlan"
            android:layout_width="150dp"
            android:textSize="19sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:inputType="text|number"
            tools:ignore="Autofill,LabelFor"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/TextViewCikkszam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:text="Cikkszám:"
            android:textColor="#000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/EditTextCikkszam"
            android:layout_width="150dp"
            android:textSize="19sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnElozolegBeolvasott"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Előzőleg bolvasott betöltése"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />

</LinearLayout>